{
  "compilerOptions": {
    "target": "es6", // Specify the target ECMAScript version (e.g., es6, es2017, es2020)
    "module": "CommonJS",
    "outDir": "./dist", // Specify the output directory for the compiled JavaScript files
    "strict": true, // Enable strict type checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "baseUrl": ".", // Set the base URL to the current directory (root folder)
    "paths": {
      "@root/*": ["./*"], // Define the "@root" alias to point to the root folder
      "@src/*": ["./src/*"] // Define the "@root" alias to point to the root folder
    }
  },
  "include": ["src"], // Specify the files or directories to be included in the compilation
  "exclude": ["node_modules"] // Specify the files or directories to be excluded from the compilation
}
